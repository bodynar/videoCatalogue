@import '../../../common/colors.styl';
@import url('https://fonts.googleapis.com/css?family=Montserrat')

/**
* By default, the placeholder should be transparent. Also, it should 
* inherit the transition.
*/
::-webkit-input-placeholder 
    opacity 0
    transition inherit

::ng-deep body 
    background-color color-white-paint

    background-image url(/static/images/background-4.jpg)
    background-size 100% 100%
    height 100vh
    overflow-y hidden
    position relative
.m-container
    height 80vh
    width 100%
    display flex
    align-items center
    justify-content space-between
.login
    &-container
        border 4px solid color-blue-soft
        border-radius 8px
        box-shadow 0 5px 10px rgba(0, 0, 0, 0.19), 0 3px 3px rgba(0, 0, 0, 0.23)
        padding 1em

        width 25%
        background-color color-white-paint-gray
        text-align center
        
    &-header
        font-family Montserrat, monospace
    &-body
        font-size 1em
    &-footer
        font-size 1em

.m-form
    display flex
    flex-direction column
    &-group
        position relative
        &-label
            color #999
            font-size 14px
            font-weight normal
            
            pointer-events none
            
            position absolute
            left 5px
            top 5px
            
            transition 0.2s ease all
            -moz-transition 0.2s ease all
            -webkit-transition 0.2s ease all
        &-input
            font-size 14px
            padding 4px 4px
            display block
            width 100%
            height 30px
            background-color transparent
            border none
            border-bottom 1px solid #757575
            &:focus
                outline none
                border-bottom 2px solid #5264AE
            &:focus ~ .m-form-group-label, &:not(:placeholder-shown) ~ .m-form-group-label
                top -18px
                font-size 14px
                color #5264AE
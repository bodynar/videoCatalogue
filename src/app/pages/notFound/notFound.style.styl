@import '../../../common/colors.styl';
@import url('https://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Work+Sans')

::ng-deep body 
    background-color color-white-paint

    background-image url(/static/images/background-notfound.jpg)
    background-size 100% 100%
    height 100vh
    overflow-y hidden
    position relative
.m-container
    height 80vh
    width 100%
    display flex
    align-items center
    justify-content center
.error
    &-container
        border-radius 8px
        border 4px solid color-blue-soft
        box-shadow 0 5px 10px rgba(0, 0, 0, 0.19), 0 3px 3px rgba(0, 0, 0, 0.23)

        padding 1em
        width 30%
        background-color color-white-paint-gray
        text-align center
    &-header
        font-family Montserrat, monospace
    &-body
        font-size 1em
        & > span 
            color color-blue-sea-wave-dark
            font-family 'Work Sans', monospace
    &-footer
        font-size 1em
    &-links
        list-style none
        display flex
        justify-content space-around
        margin-bottom 0
        padding 0
        & > .link > a
            color color-blue-sea-wave
            user-select none
            tabindex 0
            &:hover
                text-decoration none
                color color-blue-soft
            &:active
                color color-blue-sea
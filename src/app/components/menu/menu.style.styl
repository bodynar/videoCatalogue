@import '../../../common/colors.styl';

shadow-data = 0 2px 4px -1px rgba(0, 0, 0, 0.25)

menuHover(outlineColor)
    border-bottom 1.5px solid outlineColor
    margin-bottom -9.5px
menuActive()
    margin-top -8px
    padding-top 8px

nav
    display flex
    justify-content space-between
    background-color color-white-gray

    -webkit-box-shadow shadow-data
    -moz-box-shadow shadow-data
    box-shadow shadow-data

.m-nav
    &-item
        &.active
            menuActive()
            menuHover(color-blue-sea-wave-light)
            background-color color-gray-asphalt
        &:active
            menuActive()
            menuHover(color-blue-sea-wave-dark)
            background-color color-gray-asphalt-wet
        &:hover
            menuHover(color-blue-sea-wave-dark)
    &-link
        cursor pointer
        user-select none